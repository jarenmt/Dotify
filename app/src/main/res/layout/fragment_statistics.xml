<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.StatisticsFragment"
    android:padding="20dp"
    >


    <ImageView
        android:id="@+id/statisticsAlbumCover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="315dp"
        android:layout_height="315dp"
        app:layout_constraintBottom_toTopOf="@id/statisticsPlays"
        app:layout_constraintDimensionRatio="1:1"
        />
    <TextView
        android:id="@+id/statisticsPlays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Count"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statisticsAlbumCover"
        />


</androidx.constraintlayout.widget.ConstraintLayout>