<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/settingsFragment">
    <fragment
        android:id="@+id/settingsFragment"
        android:name="edu.uw.tillej.dotify.fragment.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings"
        >
        <argument
            android:name="SONG"
            app:argType="com.ericchee.songdataprovider.Song" />
        <argument
            android:name="PLAYS"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="edu.uw.tillej.dotify.fragment.StatisticsFragment"
        android:label="Profile Statistice"
        tools:layout="@layout/fragment_statistics" >
        <argument
            android:name="albumCover"
            app:argType="integer" />
        <argument
            android:name="plays"
            app:argType="integer" />
    </fragment>
    <action
        android:id="@+id/action_global_statisticsFragment"
        app:destination="@id/statisticsFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="edu.uw.tillej.dotify.fragment.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="edu.uw.tillej.dotify.fragment.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
    <action
        android:id="@+id/action_global_aboutFragment"
        app:destination="@id/aboutFragment" />
</navigation>